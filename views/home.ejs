<!DOCTYPE html>
<html lang="en">
  <header>
    <title>Home</title>
  </header>
  <body>
    <%- include('partials/header'); -%>
    <div class="container fluid">
      <h1>Home</h1>
      <p><%= startingContent %></p>

      <% posts.forEach(function(post){%>

      <h1><%= post.title %></h1>
      <p>
        <%= post.content.substring(0, 100) + " ..." %>
        <a href="/posts/<%= post.title %>">Read more</a>
      </p>
      <% }) %>
    </div>
    <%- include("partials/footer"); -%>
  </body>
</html>
